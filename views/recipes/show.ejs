<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recipe</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/recipesCss/tempcss/tempshow.css" />
    <!-- <link rel="stylesheet" href="/css/recipesCss/recipe_index.css" /> -->
    <link rel="stylesheet" href="/css/flash.css" />
    <%- include("../partials/fonts.ejs") %>
  </head>

  <body>
    <%- include("../partials/navbar.ejs") %>
    <div class="main-recipeshow-container">
      <div class="sub-main-recipeshow-container">
        <div class="sub-sub-main-recipeshow-container">
          <div class="profile-wrapper">
            <a href="profile-page.html" class="profile-button">
              <div class="profile-section">
                <img
                  src="/images/pfp.png"
                  alt="Profile Icon"
                  class="profile-photo"
                />
                <div class="profile-info">
                  <p class="account-name"><%= recipe.author.username %></p>
                  <p class="followers-count">0,000 followers</p>
                </div>
              </div>
            </a>

            <button class="follow-button" onclick="toggleFollow()">
              Subscribe
            </button>
          </div>

          <p class="recipeTitle"><%= recipe.title %></p>
          <h2 class="description"><%= recipe.description %></h2>

          <div class="all-ingredients">
            <p class="ingredients">Ingredients</p>
            <ul>
              <% for (let ingredient of recipe.ingredients) { %>
              <li><%= ingredient %></li>
              <% } %>
            </ul>
          </div>
          <div class="steps">
            <p class="steps1">Steps</p>
            <ol>
              <% for (let step of recipe.steps) { %>
              <li><%= step %></li>
              <% } %>
            </ol>
          </div>
          <div class="functionalButtons">
            <form
              action="/recipes/<%= recipe._id %>?method=DELETE"
              method="POST"
            >
              <% if (currentUser && recipe.author.equals(currentUser._id)) { %>
              <button>Delete</button>
              <a href="/recipes/<%= recipe._id %>/edit" class="edit">Edit</a>
              <% } %>
            </form>

            <div class="options">
              <a href="/recipes">All Recipes</a>
            </div>
          </div>
        </div>
      </div>

      <div class="image-comment">
        <div class="yellow-background">
          <div class="circle-container">
            <img src="<%= recipe.image %>" alt="image" />
          </div>
        </div>

        <div class="like-share-post">
          <div class="button-container">
            <!-- Like Button -->
            <div class="button" id="like-button">
              <div class="circle">
                <svg viewBox="0 0 24 24">
                  <path
                    d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
                  />
                </svg>
              </div>
              <p class="count">123</p>
            </div>

            <!-- Share Button -->
            <div class="button" id="share-button">
              <div class="circle">
                <svg viewBox="0 0 24 24">
                  <path
                    d="M18 16.08c-.76 0-1.44.3-1.96.77l-7.13-4.1a2.49 2.49 0 000-1.48l7.13-4.1a2.5 2.5 0 10-.96-1.96c0 .14.03.27.07.4l-7.13 4.1c-.54-.47-1.22-.77-1.96-.77a2.5 2.5 0 100 5c.74 0 1.42-.3 1.96-.77l7.13 4.1c-.04.13-.07.26-.07.4a2.5 2.5 0 002.5 2.5 2.5 2.5 0 000-5z"
                  />
                </svg>
              </div>
              <p class="count">45</p>
            </div>

            <!-- Save Button -->
            <div class="button" id="save-button">
              <div class="circle">
                <svg viewBox="0 0 24 24">
                  <path d="M17 3H7a2 2 0 00-2 2v16l7-3 7 3V5a2 2 0 00-2-2z" />
                </svg>
              </div>
              <p class="count">67</p>
            </div>
          </div>
        </div>

        <div class="comment-section">
          <h2>Comments</h2>

          <div class="comment-form">
            <textarea placeholder="Write a comment..." rows="4"></textarea>
            <button type="submit">Post Comment</button>
          </div>

          <div class="comments-list">
            <div class="comment">
              <div class="comment-avatar">
                <img src="https://via.placeholder.com/50" alt="User Avatar" />
              </div>
              <div class="comment-content">
                <h3>John Doe</h3>
                <p>Great article! Learned a lot.</p>
                <span class="comment-time">2 hours ago</span>

                <button class="reply-button" onclick="showReplyForm(this)">
                  Reply
                </button>

                <div class="reply-form">
                  <textarea placeholder="Write a reply..." rows="3"></textarea>
                  <button type="submit">Post Reply</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/recipes/showComments.js"></script>
  </body>
</html>
