<section id="Main">
  <!-- <canvas id="celebrationCanvas"></canvas> -->
  <div class="mainContainer">
    <div class="recipe-container">
      <p class="title animate-text">Top Recipes!!!</p>
      <div class="recipe-wrapper">
        <% for (let r of topRecipes) {%>
        <div class="recipe-card">
          <img
            src="<%= r.images[Math.floor(Math.random()*r.images.length)] %>"
            alt="Grilled Chicken Caesar Salad"
            class="recipe-image"
          />

          <div class="profile">
            <img
              src="https://via.placeholder.com/50"
              alt="Profile Picture"
              class="profile-image"
            />
            <p class="profile-name"><%= r.author %></p>
          </div>
          <h2 class="recipe-title"><%= r.title %></h2>
          <p class="like-count">👍 <%= r.likeCount %></p>
          <a href="/recipes/<%= r._id %>" class="recipe-button">Visit Recipe</a>
        </div>
        <% } %>
      </div>
      <!-- <script src="/js/main.js"></script> -->
    </div>
  </div>
</section>
